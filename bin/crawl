#! /usr/bin/env ruby

require 'bundler'
Bundler.require
Dotenv.load


$LOAD_PATH.unshift File.expand_path(File.dirname(__FILE__) + '/../lib')
require 'recon'

crawler_name = ARGV.shift

file = Dir['./spiders/**/*.rb'].grep(%r{#{crawler_name}}).first

require file

crawler_class = file.gsub(/.rb$/, '').split("/").last.camelize.constantize

crawler_class.crawl
